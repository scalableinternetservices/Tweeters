<%= form_with(model: comment) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <% form.label :user_id %>
    <%if @comment.nil?%>
    <%= form.number_field :user_id, value:curr_user, type: :hidden %>
    <%else%>
    <%= form.number_field :user_id, value: @comment.user_id, type: :hidden %>
    <%end%>
  </div>

  <div class="field">
    <% form.label :tweet_id %>
    <%if @comment.nil?%>
    <%= form.number_field :tweet_id, value:curr_tweet, type: :hidden %>
    <%else%>
    <%= form.number_field :tweet_id, value: @comment.tweet_id, type: :hidden %>
    <%end%>  </div>

  <div class="container">
  <div class="row">
      <div class = "col-md-5">      
        <%= form.text_field :content, placeholder: "Comment", class:"form-control", style:"min-width: 100%"%>
      </div>
      <div class = "col">
      <div class="actions">
        <%= form.submit "Add Comment", class:'btn btn-outline-primary' %>
      </div>
      </div>
  </div>
  </div>

  <br/>
<% end %>
