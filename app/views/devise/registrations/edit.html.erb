<h2>Edit <%= resource_name.to_s.humanize %> Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group row">
    <%= f.label :first_name, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :first_name,  class:"col-sm-5 form-control" ,autocomplete: "First Name" %>
  </div>
  <div class="field form-group row">
    <%= f.label :last_name, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :last_name,  class:"col-sm-5 form-control" ,autocomplete: "Last Name" %>
  </div>
  <div class="field form-group row">
    <%= f.label :bio, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :bio,  class:"col-sm-5 form-control" ,autocomplete: "Bio" %>
  </div>
  <div class="field form-group row">
    <%= f.label :location, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :location, class:"col-sm-5 form-control" ,autocomplete: "Location" %>
  </div>
  <div class="field form-group row">
    <%= f.label :email, class: "col-sm-2 col-form-label" %>
    <%= f.email_field :email,  readonly: true, class:"col-sm-5 form-control" ,autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group row">
    <%= f.label :password , class: "col-sm-2 col-form-label"%> <br />
    <%= f.password_field :password, autocomplete: "new-password" , class:"col-sm-5 form-control" , placeholder:"(leave blank if you don't want to change it)"%>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field form-group row">
    <%= f.label :password_confirmation , class: "col-sm-2 col-form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-sm-5 form-control"  %>
  </div>

  <div class="field form-group row">
    <%= f.label :current_password , class: "col-sm-2 col-form-label" %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"col-sm-5 form-control" , placeholder:"(we need your current password to confirm your changes)" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class:"btn btn-outline-secondary" %>
  </div>
<% end %>
<br/><br/>
<h3>Cancel my account</h3>
<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class:"btn btn-outline-danger", data: { confirm: "Are you sure?" }, method: :delete %></p>


