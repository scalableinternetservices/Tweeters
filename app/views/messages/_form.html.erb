<%= form_with(model: message) do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  


  <div class="field">
    <%if @message.nil?%>
    <%= form.number_field :to_user, value: to_user, type: :hidden %>
    <%else%>
    <%= form.number_field :to_user, value: @message.to_user, type: :hidden %>
    <%end%>
  </div>

  <div class="field">
    <% form.label :from_user %>
    <%= form.number_field :from_user, value: current_user.id, type: :hidden if user_signed_in?%>
  </div>

<div class="container">
  <div class="row">
    <div class="col">  
    <div class="field">
        <% form.label :content %>  

        <%= form.text_area :content, placeholder: "Type your message", class:"form-control", rows: 1, cols: 100, style: 'width:100%;'%>
    </div>
    </div>
    <div class="col">  
    <div class="actions">
        <%= form.submit "Send", class: "btn btn-primary"%>
    </div>
    </div>
  </div>
</div>
<% end %>
